<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

  <body>
    <header>
      <section>
        <%- include('./partials/nav.ejs')%> 
      </section>
    </header>
    <main>
       <section>      
        <div class=" products-responsive">
            <% products.forEach(function(product){ let finalPrice=(product.price * ((100 - product.discount) /
              100)).toFixed(0) %>
                <div class="article">
                  <a href="/products/detail/<%= product.id %>">
                    <div class="images-box">
                      <img src="/images/<%= product.image %>" alt="productos" class="pictures" />
                    </div>
                    <div class="description-box">
                      <i class="fas fa-truck"></i>
                      <div class="price-discount">
                        <p class="price">$ <%=finalPrice %>
                        </p>
                        <p class="discount">
                          <%=product.discount %>% OFF
                        </p>
                      </div>
                      <h4 class="description">
                        <%=product.description %>
                      </h4>
                    </div>
                  </a>
                </div>
                <% }) %>
                </div>
      </section>
    </main>
    <%- include('./partials/footer.ejs')%>
  </body>

</html>